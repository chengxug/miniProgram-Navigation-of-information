/*卡片样式*/
.card{
  /* display: block; */
  /* position: relative; */
  width:100%;
  background-color:#ffffff;
  box-shadow:0 0 12rpx 20rpx rgba(0, 0, 0, 0.05);
  margin:32rpx 32rpx 0 32rpx;
  padding:24rpx;
  border-radius:20rpx;
}

/*卡片标题字体设置*/
.card-title{
  color:#131821;
  font-size:28rpx;
  font-weight:900
}
.card-url{
  /* display:contents; */
  font-size: 27rpx;
  color:#44474e;
  width:500rpx;
  overflow: hidden;
  white-space: nowrap; /* 防止文本换行 */
  text-overflow: ellipsis; /* 使用省略号截断溢出文本 */
}
/*卡片简介字体设置*/
  .card-desc{
    color:#505b67;
    font-size:26rpx;
    height:60rpx;
    overflow:scroll;/*控制溢出，scorll:溢出时显示滚动条*/
    margin-top: 8rpx;
    margin-bottom:8rpx
}